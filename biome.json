{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "files": {
    "ignore": [
      ".next",
      ".vercel",
      "*.d.ts",
      "*.spec.ts",
      "**/package.json",
      "dist",
      "wasm",
      "webpack-stats.json"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noCommaOperator": "off",
        "noParameterAssign": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConstEnum": "off",
        "noUnsafeDeclarationMerging": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
